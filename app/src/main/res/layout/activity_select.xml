<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f6fc"
    tools:context=".MainActivity">

    <!-- Logo TSE -->

    <!-- Texto de boas-vindas -->
    <ImageView
        android:id="@+id/logoTSE"
        android:layout_width="233dp"
        android:layout_height="105dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tse" />

    <TextView
        android:id="@+id/tituloNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem Vindo"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/logoTSE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Subtítulo "selecione o prefeito" -->
    <TextView
        android:id="@+id/subtituloPrefeito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="selecione o prefeito"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tituloNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spinner do prefeito -->
    <Spinner
        android:id="@+id/spinnerPrefeito"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/subtituloPrefeito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imagem do prefeito -->
    <ImageView
        android:id="@+id/imageViewPrefeito"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerPrefeito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- TextView Prefeito Info -->
    <TextView
        android:id="@+id/textViewPrefeitoNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imageViewPrefeito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView Prefeito Info 2 -->
    <TextView
        android:id="@+id/textViewPrefeitoNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prefeito"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textViewPrefeitoNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo "selecione o vereador" -->
    <TextView
        android:id="@+id/subtituloVereador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o vereador"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPrefeitoNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spinner do vereador -->
    <Spinner
        android:id="@+id/spinnerVereador"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/subtituloVereador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imagem do vereador -->
    <ImageView
        android:id="@+id/imageViewVereador"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerVereador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- TextView Vereador Info -->
    <TextView
        android:id="@+id/textViewVereadorNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 000"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imageViewVereador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView Vereador Info 2 -->
    <TextView
        android:id="@+id/textViewVereadorNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textViewVereadorNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Confirmar -->
    <Button
        android:id="@+id/confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirmar"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewVereadorNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
